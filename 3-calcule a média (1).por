/*Crie um algoritmo que leia dois números e calcule a média*/
programa {
  funcao inicio() {
    real numeroUM, numeroDois, media
    escreva("digite o primeiro numero: ")
    leia(numeroUM) 
    escreva("digite o segundo numero: ")
    leia(numeroDois)
    media = (numeroUM + numeroDois) / 2
    escreva("\na media deles é: " + media)


    
  }
}
